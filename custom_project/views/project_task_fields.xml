<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_wt_form" model="ir.ui.view">
        <field name="name">project_task_wt.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_ids']" position="after">
                <field name="mo_star" string="Priority"  widget="priority"/>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="before">
                <field name="mo_duration_aot" string="Duration(D)"/>
                <field name="mo_duration_aot_day" />
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="mo_wt"  widget="percentage"/>
                <field name="mo_wt_per_day"  widget="percentage"/>
                <field name="mo_item_actual_progress_aot"  widget="percentage" readonly='1'/>
                <field name="mo_planned_progress"  widget="percentage"/>
                <field name="mo_difference"  widget="percentage"/>
            </xpath>
        </field>
    </record>
    

</odoo>
